		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^9.0.9",
		"@nestjs/jwt": "^9.0.0",
		"@nestjs/mongoose": "^9.2.0",
		"@nestjs/passport": "^9.0.0",
		"@nestjs/platform-fastify": "^9.0.9",
		"@nestjs/terminus": "^9.1.1",
		"@prisma/client": "^4.2.1",
		"@sendgrid/mail": "^7.7.0",
		"@types/ms": "^0.7.31",
		"argon2": "^0.28.7",
		"bull": "^4.8.5",
		"cache-manager": "^4.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"fastify": "^4.4.0",
		"geoip-lite": "^1.4.6",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.5.2",
